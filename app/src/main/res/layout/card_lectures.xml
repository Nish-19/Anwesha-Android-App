<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card1"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/lecture_image_view"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/balon2"
                android:padding="23dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/lecture_name_view"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:text="Hitesh Choudhary"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="25dp"

                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/lecture_detail_view"
                        android:layout_height="wrap_content"
                        android:text="Founder and CEO of LearnCodeOnline. Renowned expert in cybersecurity, popular YouTuber with 250K+ subscribers"
                        android:textColor="#ffff"
                        android:background="#40FF0000"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>