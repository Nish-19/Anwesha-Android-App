<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <View
            android:id="@+id/vertical_line"
            android:layout_width="2dp"
            android:layout_height="1440dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/event_one"
            style="@style/timeline_event_right"
            android:layout_marginTop="35dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:padding="5dp"
                    android:background="@drawable/circle2"
                    android:src="@drawable/slide_ebid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robo Showcase"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10th march , 14:00"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <View style="@style/timeline_circle_style" />

            <View
                android:id="@+id/horizontal_line1"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_two"
            style="@style/timeline_event_left"
            android:layout_below="@+id/event_one">

            <View
                android:id="@+id/horizontal_line2"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

            <View style="@style/timeline_circle_style" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle2"
                    android:padding="3dp"
                    android:src="@drawable/slide_ebid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rubik's Cube"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10th March , 10:00"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>
