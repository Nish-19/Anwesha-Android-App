<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/colorPrimaryLight"
            android:id="@+id/timeline_image_view"
            android:src="@drawable/social_circus" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:gravity="center"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textAlignment="center"
                tools:text="Electrobid"
                android:id="@+id/timeline_eveName"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                tools:text="9:00 AM"
                android:id="@+id/timeline_time"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/timeline_venue"
                android:layout_marginTop="5dp"
                tools:text="Senate Hall"
                android:textAlignment="center"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>